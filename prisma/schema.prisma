model User {
  id               Int       @id @default(autoincrement())
  name             String
  email            String    @unique
  password         String
  role             Role
  isActive         Boolean   @default(true) // Nuevo: para soft delete
  isSuspended      Boolean   @default(false) // Nuevo: para suspender usuario
  suspensionReason String? // Nuevo: motivo de suspensión
  deletedAt        DateTime? // Nuevo: timestamp si fue eliminado
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  appointments       Appointment[] @relation("PatientAppointments")
  doctorAppointments Appointment[] @relation("DoctorAppointments")
  timeBlocks         TimeBlock[]
  auditLogs          AuditLog[] // Nuevo: relación con logs
}

model Appointment {
  id          Int               @id @default(autoincrement())
  date        DateTime
  timeBlockId Int               @unique
  patientId   Int
  doctorId    Int
  status      AppointmentStatus @default(PENDING) // Enum ya definido
  notes       String?
  reason      String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  timeBlock TimeBlock @relation(fields: [timeBlockId], references: [id])
  patient   User      @relation("PatientAppointments", fields: [patientId], references: [id])
  doctor    User      @relation("DoctorAppointments", fields: [doctorId], references: [id])
}

model TimeBlock {
  id        Int      @id @default(autoincrement())
  doctorId  Int
  startTime DateTime
  endTime   DateTime
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  doctor      User         @relation(fields: [doctorId], references: [id])
  appointment Appointment?
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  action    String
  timestamp DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  PATIENT
  DOCTOR
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}
